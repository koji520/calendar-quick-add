{
  "manifest_version": 3,

  "name": "Google Calendar Quick Add",
  "description": "選択したテキストをGoogleカレンダーの予定に追加します。",
  "version": "1.0.5",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "contextMenus",
    "tabs"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
